    private void mnuGraphic_LineActionPerformed(java.awt.event.ActionEvent evt) {                                                
        this.setTitle("LINE Menu Click");
        ix = 100;
        iy = 100;
        iMenu_idx = 31;
        this.repaint();
    }                                               

    private void mnuGraphic_LineMenuKeyPressed(javax.swing.event.MenuKeyEvent evt) {                                               
        this.setTitle("LINE Menu Click");
        ix = 100;
        iy = 100;
        iMenu_idx = 31;
        this.repaint();

    }                                              

