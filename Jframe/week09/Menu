    private void mnuFont_DotumActionPerformed(java.awt.event.ActionEvent evt) {                                              
        ix = 10;
        iy = 100;
        objFont = new Font("돋움체", Font.ITALIC, 24);
        iMenu_idx = 43; // 'M'enu_idx -> 'i'Menu_idx 오타 수정
        this.repaint();
    }                                             

